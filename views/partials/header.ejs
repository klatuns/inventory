<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/bootstrap.css">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/filtab.css">
    <link rel="stylesheet" href="/stylesheets/fontawesome.css">
    
    <script src="/scripts/filtab.js"></script>
    <script src="/scripts/jquery-3.4.1.min.js"></script>
    <script src="/scripts/bootstrap.js"></script>
    
    
    

    <title>Inventory</title>
    
</head>
<body> 
    <div class="topnav">
       <center> <div style="width: 95%;">
        <a href="/admin/products"><img src="/icons/tag-fill.svg" alt="" width="25" height="25" title="Tag">Products Page</a>
        <a href="/admin/users"><img src="/icons/people-fill.svg" alt="" width="25" height="25" title="Tag">Users</a>
        <a href="/sale"><img src="/icons/cart-plus.svg" alt="" width="25" height="25" title="Tag">Store</a>
        <a href="/admin"><img src="/icons/person-circle.svg" alt="" width="25" height="25" title="Tag">Admin</a>
        <div id="log">
        <% if (!currentUser){ %>
        <a href="/admin/login" >Login</a>
       
        <% } else { %>
            <a href="/admin/newproduct"><img src="/icons/file-diff-fill.svg" alt="" width="25" height="25" title="Tag">Add New Product</a>
            <a href="/admin"><img src="/icons/person-bounding-box.svg" alt="" width="25" height="25" title="Tag"> 
                <%= currentUser.firstname.toUpperCase() %> <%= currentUser.lastname.toUpperCase() %></a>
        <a href="/logout" class="btn btn-danger" > <img src="/icons/eject.svg" alt="" width="25" height="25" title="Tag">Logout </a>
        <% } %>
      </div>
    </div> </center>
</div>
<% if (error && error.length > 0) {%>
    <center> <div class="alert alert-danger" style="width: 30%;"><%= error%>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button></div></center>
 <%} %>
 <% if (success && success.length > 0) {%>
    <center> <div class="alert alert-success" style="width: 30%;"><%= success%> 
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button></div></center>
 <%} %>
