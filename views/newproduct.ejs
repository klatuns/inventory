<h1 id="form" class="addProd">ADDING PRODUCTS</h1>
<div style="width: 30%; margin: 25px auto;">
    <form action="/admin/products" method="POST" id="form">
        <div class="form-group">
      <input class="form-control" type="text" name="code" id="code" placeholder="Product Code" minlength="3" maxlength="20" required>
      </div>
      <div class="form-group">
      <input class="form-control" type="text" name="name" id="name" placeholder="Product Name" required>
      </div>
      <div class="form-group">
      <input class="form-control" type="number" name="price" id="price" placeholder="Product Price" min="0" required>
      </div>
      <div class="form-group">
      <input class="form-control" type="number" name="quantity" id="quantity" placeholder="Quantity Available" min="0"
        required> </div>
        <div class="form-group">
      <input class="form-control" type="description" name="description" id="description"
        placeholder="Product Description" required></div>
        <div class="form-group">
      <button class="btn btn-lg btn-secondary btn-block"  >Add Product</button>
      </div>
      <a id="back" class="btn btn-sm btn-dark" href="/admin/products">‚Üê Back</a>
